<h2>Recipe Catalog</h2>
<section class="recipes">
    {{#if recipes}}

    {{#each recipes}}
    <article class="recipe">
        <img src="{{image}}" alt="#">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <a href="/catalog/{{_id}}">Read More</a>
    </article>
    {{/each}}


    {{else}}
    <p class="no-post">There are no recipes found yet!</p>
    {{/if}}
</section>