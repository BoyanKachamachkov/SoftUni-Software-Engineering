<section id="details-info">
    <h1>Details</h1>
    <div class="volcano-image">
        <img src="{{image}}">
    </div>

    <div class="volcano-info">
        <div class="volcano-text">
            <h1 id="name">{{name}}</h1>
            <h3 id="location">Location: {{location}}</h3>
            <p id="type">Volcano Type: {{typeVolcano}}</p>
            <p id="elevation"><span>Elevation: {{elevation}}</span></p>
            <p id="last-eruption">Year of Last Eruption: {{lastErruption}}</p>
            <p id="votes">Vote's Count: {{votesCount}}</p>
            <p id="description">{{description}}</p>
        </div>
        <div class="product-btn">
            {{#if isAuthenticated}}
                {{#if isOwner}}
            <div class="author">
                <a href="#" class="btn-edit">Edit</a>
                <a href="#" class="btn-delete">Delete</a>
            </div>

                {{else if hasVoted}}
            <p class="vote-message">You've already voted for this volcano!</p>
                {{else}}
            <a href="/volcanoes/catalog/vote/{{_id}}" class="btn-vote">Vote</a>
                {{/if}}
            {{/if}}
        </div>
    </div>
</section>