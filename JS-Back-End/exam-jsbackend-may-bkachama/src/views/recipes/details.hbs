<article class="recipe-detail">
    <img src="{{image}}" alt="S#">
    <h2>{{title}}</h2>
    <p>{{description}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Ingredients:</h3>
    <p>{{ingredients}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>Instructions:</h3>
    <p>{{instructions}}</p>

    <h3>-----------------------------------------------------</h3>

    <h3>People Who Recommend: {{recommendationsCount}}</h3>
</article>

<div class="command">
    {{#if isAuthenticated}}
        {{#if isOwner}}
    <a href="/catalog/edit/{{_id}}">Edit</a>
    <a href="/catalog/delete/{{_id}}">Delete</a>

        {{else if hasRecommended}}
    <p>You've already recommended this recipe!</p>
        {{else}}
    <a href="/catalog/recommend/{{_id}}">Recommend</a>
        {{/if}}
    {{/if}}
</div>