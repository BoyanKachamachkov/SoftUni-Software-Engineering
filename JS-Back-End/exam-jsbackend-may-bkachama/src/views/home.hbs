<section class="hero">
    <h2>Welcome to Home Cooking Recipes</h2>
    <p>Your go-to place for delicious and easy-to-make recipes.</p>
    <a href="/catalog" class="btn">Explore Recipes</a>
</section>
<section class="featured-recipes">
    <h2>Featured Recipes</h2>
    <div class="recipes">
        {{#if latestRecipes}}

        {{#each latestRecipes}}
        <article class="recipe">
            <img src="{{image}}" alt="#">
            <h3>{{title}}</h3>
            <p>{{description}}</p>
            <a href="/catalog/{{_id}}">Read More</a>
        </article>
        {{/each}}

        {{else}}
        <p class="no-post">There are no recipes found yet!</p>
        {{/if}}
    </div>
</section>